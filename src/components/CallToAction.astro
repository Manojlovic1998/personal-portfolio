---
import { twMerge, type ClassNameValue } from "tailwind-merge";
interface Props {
  href: string;
  className?: ClassNameValue;
  target?: astroHTML.JSX.HTMLAttributeAnchorTarget | null | undefined;
}

const { className, href, target } = Astro.props;
---

<a
  href={href}
  class={twMerge(
    className,
    "rounded-[3px] flex flex-row gap-1 px-5 py-3 bg-button-primary w-fit text-skin-inverted font-semibold items-center hover:bg-button-primary-hover",
  )}
  target={target}><slot /></a
>
