---
import { twMerge } from "tailwind-merge";
interface Props {
  title: string;
  tagline?: string;
  className?: string;
  text?: "center";
}

const { tagline, title, className, text } = Astro.props;
---

<div class:list={[twMerge("flex flex-col gap-8", className)]}>
  <h1
    class:list={[
      "text-5xl sm:text-6xl font-bold text-skin-base dark:text-skin-base-dark w-full md:max-w-[591px] text-center, animate",
      { "md:text-left": text !== "center" },
    ]}
  >
    {title}
  </h1>
  {
    tagline && (
      <p
        class:list={[
          "text-skin-muted dark:text-skin-muted-dark text-2xl font-semibold max-w-[591px] text-center animate",
          { "md:text-left": text !== "center" },
        ]}
      >
        {tagline}
      </p>
    )
  }
  <slot />
</div>
